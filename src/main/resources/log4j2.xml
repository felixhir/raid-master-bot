<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="INFO">
    <Properties>
        <Property name="LOG_DIR">logs</Property>
        <Property name="APP_DIR">app</Property>
        <Property name="MSG_DIR">messages</Property>
        <Property name="DEBUG_DIR">debug</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} %-5level [%c{2}]  - %msg%n"/>
        </Console>

        <RollingFile name="ApplicationFiles" append="true"
        filePattern="${LOG_DIR}/${APP_DIR}/raid-master-%d{dd MMM}.log" >
            <PatternLayout pattern="%d{MMM dd HH:mm:ss} %highlight{%-5level} %c{2} [%t] - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="86400"/>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
        </RollingFile>

        <RollingFile name="HandlerFiles" append="true"
                     filePattern="${LOG_DIR}/${MSG_DIR}/handlers-%d{dd MMM}.log" >
            <PatternLayout pattern="%d{MMM dd HH:mm:ss} %highlight{%-5level} %c{2} [%t] - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="86400"/>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
        </RollingFile>

        <RollingFile name="Debug" append="true"
                     filePattern="${LOG_DIR}/${DEBUG_DIR}/debug-%d{dd MMM}.log">
            <PatternLayout pattern="%d{MMM dd HH:mm:ss} %highlight{%-5level} %c{2} [%t] - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="TRACE">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="Debug"/>
        </Root>

        <Logger name="Application" level="INFO">
            <AppenderRef ref="ApplicationFiles"/>
        </Logger>
        <Logger name="handler" additivity="false">
            <AppenderRef ref="Console" level="DEBUG"/>
            <AppenderRef ref="HandlerFiles" level="DEBUG"/>
        </Logger>
    </Loggers>
</Configuration>